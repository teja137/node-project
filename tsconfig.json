{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2016",                            
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,                        
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts","./package.json"],
  "exclude": ["node_modules", "./dist"]
}
